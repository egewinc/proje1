@model Ege.ViewModels.AraclarKullanici

@{
    ViewData["Deneme"] = "Yeni Araç ve Kullanıcı Ekle";
}

<h1>@ViewData["Deneme"]</h1>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <!-- Kullanıcı Adı -->
    <div class="mb-3">
        <label for="ad" class="form-label">Ad</label>
        <input type="text" class="form-control" id="ad" name="ad" required />
    </div>

    <!-- Kullanıcı Soyadı -->
    <div class="mb-3">
        <label for="soyad" class="form-label">Soyad</label>
        <input type="text" class="form-control" id="soyad" name="soyad" required />
    </div>

    <!-- Kullanıcı Yaşı -->
    <div class="mb-3">
        <label for="yas" class="form-label">Yaş</label>
        <input type="number" class="form-control" id="yas" name="yas" required />
    </div>

    <!-- Araç Marka -->
    <div class="mb-3">
        <label for="marka" class="form-label">Marka</label>
        <input type="text" class="form-control" id="marka" name="marka" required />
    </div>

    <!-- Araç Modeli -->
    <div class="mb-3">
        <label for="model" class="form-label">Model</label>
        <input type="text" class="form-control" id="model" name="model" required />
    </div>

    <!-- Araç Yılı -->
    <div class="mb-3">
        <label for="yil" class="form-label">Yıl</label>
        <input type="number" class="form-control" id="yil" name="yil" required />
    </div>

    <!-- Araç Fiyatı -->
    <div class="mb-3">
        <label for="fiyat" class="form-label">Fiyat</label>
        <input type="number" class="form-control" id="fiyat" name="fiyat" required />
    </div>

    <!-- Motor Hacmi -->
    <div class="mb-3">
        <label for="motorH" class="form-label">Motor Hacmi</label>
        <input type="number" class="form-control" id="motorH" name="motorH" required />
    </div>

    <!-- Koltuk Sayısı -->
    <div class="mb-3">
        <label for="koltukSayisi" class="form-label">Koltuk Sayısı</label>
        <input type="number" class="form-control" id="koltukSayisi" name="koltukSayisi" required />
    </div>

    <!-- Motor Gücü -->
    <div class="mb-3">
        <label for="motorGucu" class="form-label">Motor Gücü</label>
        <input type="number" class="form-control" id="motorGucu" name="motorGucu" required />
    </div>

    <!-- Tork -->
    <div class="mb-3">
        <label for="tork" class="form-label">Tork</label>
        <input type="number" class="form-control" id="tork" name="tork" required />
    </div>

    <!-- Renk -->
    <div class="mb-3">
        <label for="renk" class="form-label">Renk</label>
        <input type="text" class="form-control" id="renk" name="renk" required />
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
